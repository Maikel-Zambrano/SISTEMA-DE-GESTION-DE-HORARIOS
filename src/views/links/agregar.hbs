<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">

            <div class="card bg-dark">
                <div class="card-body">
                    <h1 class="text-light mb-3 h4">Crear un nuevo Horario</h1>
                    <form action="/links/add" method="POST">
                        <div class="form-group">
                          <input type="text" name="title" class="form-control bg-dark text-light" placeholder="Title"
                                autofocus>
                        </div>
                         <div class="form-group">
                            <input type="time" name="hora_inicio" class="form-control bg-dark text-light" placeholder="hora"
                                >
                        </div>
                        <div class="form-group">
                            <input type="text" name="lunes" class="form-control bg-dark text-light" placeholder="lunes">
                        </div>
                        <div class="form-group">
                            <input type="text" name="martes" class="form-control bg-dark text-light" placeholder="martes">
                        </div>
                        <div class="form-group">
                            <input type="text" name="miercoles" class="form-control bg-dark text-light" placeholder="miercoles">
                        </div>
                        <div class="form-group">
                            <input type="text" name="jueves" class="form-control bg-dark text-light" placeholder="jueves">
                        </div>
                        <div class="form-group">
                            <input type="text" name="viernes" class="form-control bg-dark text-light" placeholder="viernes">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control bg-dark text-light"
                                placeholder="Description"></textarea>
                        </div>

                        <div class="form-group">
                            <button  class="btn btn-success btn-block" >
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>